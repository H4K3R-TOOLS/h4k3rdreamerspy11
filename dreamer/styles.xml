<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- app bar / status bar -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>

        <!-- accent color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <!-- text/icon on primary -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>

        <!-- window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- optionally tweak the status-bar icons on darker backgrounds -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Translucent AppCompat theme for PermissionHelperActivity -->
    <style name="Theme.AppCompat.Translucent.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>